<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/design_ideas_wood_background_wallpaper"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.ramapo.csnyder.Risk.CardActivity" >

    <LinearLayout 
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/card_rows">
        
        <LinearLayout 
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_row_one">
            
            <Button 
                android:id="@+id/card_space_one"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:onClick="selectCardSpaceOne"
                android:visibility="gone"/>
            
            <Button 
                android:id="@+id/card_space_two"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:onClick="selectCardSpaceTwo"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:visibility="gone"/>
            
            <Button 
                android:id="@+id/card_space_three"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:onClick="selectCardSpaceThree"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:visibility="gone"/>
            
            <Button 
                android:id="@+id/card_space_four"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:onClick="selectCardSpaceFour"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:visibility="gone"/>
            
            <Button 
                android:id="@+id/card_space_five"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:onClick="selectCardSpaceFive"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:visibility="gone"/>
            
            <Button 
                android:id="@+id/card_space_six"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:onClick="selectCardSpaceSix"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:visibility="gone"/>
        </LinearLayout>
        
        <LinearLayout 
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/card_row_two">
            
            <Button 
                android:id="@+id/card_space_seven"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:onClick="selectCardSpaceSeven"
                android:visibility="gone"/>
            
            <Button 
                android:id="@+id/card_space_eight"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:onClick="selectCardSpaceEight"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:visibility="gone"/>
            
            <Button 
                android:id="@+id/card_space_nine"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:onClick="selectCardSpaceNine"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:visibility="gone"/>
            
            <Button 
                android:id="@+id/card_space_ten"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:onClick="selectCardSpaceTen"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:visibility="gone"/>
            
            <Button 
                android:id="@+id/card_space_eleven"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:onClick="selectCardSpaceEleven"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:visibility="gone"/>
            
            <Button 
                android:id="@+id/card_space_twelve"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:onClick="selectCardSpaceTwelve"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:visibility="gone"/>
            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_below="@id/card_rows"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        
        <Button 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:id="@+id/trade_in_button"
       	 	android:text="@string/trade_in"
       	 	android:textSize="30sp"
       	 	android:onClick="tradeIn"/>
    
    	<Button 
       	 	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:id="@+id/back_button"
        	android:text="@string/back"
        	android:textSize="30sp"
        	android:onClick="goBack"/>
    	
    </LinearLayout>
    
    

</RelativeLayout>
